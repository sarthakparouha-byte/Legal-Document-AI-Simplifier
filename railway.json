{
  "services": [
    {
      "name": "backend",
      "root": "backend",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "uvicorn server:app --host 0.0.0.0 --port $PORT"
    },
    {
      "name": "frontend",
      "root": "frontend",
      "buildCommand": "npm install && npm run build",
      "startCommand": "npx serve -s build -l $PORT"
    }
  ]
}
